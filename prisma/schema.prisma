// 비타민 의원 홈페이지 데이터베이스 스키마

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     Role   @default(ADMIN)
}

enum Role {
  ADMIN
  STAFF
}

model Content {
  id      String @id @default(cuid())
  page    String
  section String
  title   String?
  content String
  image   String?
  order   Int    @default(0)
  fontSize String @default("normal")
  @@unique([page, section])
}

model Notice {
  id        String   @id @default(cuid())
  title     String
  content   String
  important Boolean  @default(false)
  category  String   @default("general")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HealthInfo {
  id          String   @id @default(cuid())
  title       String
  content     String
  category    String
  imageUrl    String?
  createdAt   DateTime @default(now())
}

model Gallery {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  category    String
  altText     String
  createdAt   DateTime @default(now())
}

// 새로운 관리자 시스템을 위한 모델들
model MarqueeNotice {
  id        String   @id @default(cuid())
  icon      String
  text      String
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Treatment {
  id          String   @id @default(cuid())
  title       String
  icon        String
  description String
  features    String   // JSON array as string
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HospitalContent {
  id        String   @id @default(cuid())
  section   String   @unique // hero, services, doctors, facilities, contact, footer
  data      String   // JSON data as string
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
